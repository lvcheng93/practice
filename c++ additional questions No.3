class Solution{
public:
    vector<vector<int>> order(vector<int> &v){
        int flag = 1;
        vector<int> tmp;
        vector<vector<int>> result;
        for(vector<int>::iterator it = v.begin();it < v.end();++it){
            tmp.push_back(*it);
            if(flag == *(tmp.end()-1)){
                vector<int> part_of_result;
                part_of_result.push_back(*(tmp.end()-1));
                tmp.erase(tmp.end()-1);
                vector<int>::iterator itt = find(tmp.begin(), tmp.end(), ++flag);
                while(itt != tmp.end()){
                    part_of_result.push_back(*itt);
                    tmp.erase(itt);
                    itt = find(tmp.begin(), tmp.end(), ++flag);
                }
                result.push_back(part_of_result);
            }
        }
        return result;
    }
};

